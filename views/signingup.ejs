    <!-- creating a welcoming jumbotron -->
    <div class="jumbotron jumbotron-fluid bg-secondary text-white">
        <div class="container">
                
            <h1 class="words">The Apprentice</h1>    
            <p class="lead words">Increase your employee's level of Productivity...</p>
                
        </div>
    
    </div>
  
    
    <!-- adding a pop up window -->
    <div id="overlay">
        <div class="modal">
            <div class="modal-heading">
                <div class="modal-title">
                    <h3 class="display-5 words mx-3 my-5" id="modal-heading"></h3>
                </div>
                <div class="close-modal">
                    <input type="submit" id="close-modal-btn" value='&times;'>
                </div>
            </div>
