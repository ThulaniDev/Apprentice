        </div>
    </div>
    <!-- adding a pop up window for signing up  -->
    <div class="container" id="reg-container">
        <form method="POST" action="/register/new-member">
            <div class="mx-3 my-5">
                <label id="p" class="lead mx-1 my-2" for="Idnumber">ID Number</label>
                <input class="form-control form-control" name="txtidnumber" type="number"/>
                <label id="p" class="lead mx-1 my-2" for="firstname">Firstname</label>
                <input class="form-control form-control" name="txtfirstname" type="text"/>
                <label id="p" class="lead mx-1 my-2" for="lastname">Lastname</label>
                <input class="form-control form-control" name="txtlastname" type="text"/>
                <label id="p" class="lead mx-1 my-2" for="phonenumber">Phone Number</label>
                <input class="form-control form-control" name="txtphoneNumber" type="number"/>
                <label id="p" class="lead mx-1 my-2" for="email">Email</label>
                <input class="form-control form-control" name="txtsignupemail" placeholder="example@example.com" type="email"/>
                <label id="p" class="lead mx-1 my-2" for="password">Password</label>
                <input class="form-control form-control" name="txtsignuppassword" type="password"/>
                <label id="p" class="lead mx-1 my-2" for="confirm-password">Confirm Password</label>
                <input class="form-control form-control" name="txtconfirmpassword" type="password"/>
                
                
                    
            </div>
            <button class="btn btn-primary mb-3" id="btnsave" type="submit">Save</button> <a class="" href="/"  id="newusercredentials">Login with your new credentials</a>
        
        </form>
    </div>

    
    
    
   
   
    
 
    
